{
  "name": "kuritterweight-line-bot",
  "type": "module",
  "scripts": {
    "dev": "$npm_execpath run build:mcp-app && vite",
    "build:mcp-app": "vite build -c vite.mcp-app.config.ts",
    "build": "$npm_execpath run build:mcp-app && vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@line/bot-sdk": "^9.2.2",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "chart.js": "^4.5.1",
    "hono": "^4.11.9",
    "hono-rate-limiter": "^0.5.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.9.0",
    "@cloudflare/workers-types": "^4.20250628.0",
    "prettier": "^3.8.1",
    "vite": "^6.3.5",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-ssr-components": "^0.5.2",
    "wrangler": "^4.17.0"
  }
}
